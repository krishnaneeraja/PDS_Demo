"select d.product_id,name,card_type,allotment_type,quantity,price,uom,max_quantity,scheme_id, \ ifnull((SELECT SUM(OT.QUANTITY) QTY FROM ORDER_HEADER OH, ORDER_TRAILER OT \ WHERE OH.ID=OT.ORDER_ID AND OH.CARD_ID='%s' \ AND substr(OH.ORDER_DATE,5,2) = substr(date('now'),6,2) \ and d.product_id=ot.product_id ),0)  QTY \ from shop_details s, distribution d \ where s.area_type = d.area_type and d.card_type='1'"
